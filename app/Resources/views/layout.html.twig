{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<title>{% block title %}GdA{% endblock %}</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>

	<body>
		<div class="container">
			<div id="header" class="hero-unit">
				<h1>Gestion des anomalies</h1>
				<p>Projet d'étude sur symfony pour gérer les anomalies d'un projet</p>
				<p><a class="btn btn-primary btn-large" href="srblog.info">
					Accéder à mon blog
				</a></p>
			</div>

			<div class="row">
				<div id="menu" class="span3">
					<h3>Le blog</h3>
					<ul class="nav nav-pills nav-stacked">
						<li><a href="{{ path('myapp_lister_anomalie') }}">Recherche Anomalie</a></li>
						<li><a href="{{ path('myapp_creer_anomalie') }}">Ajouter une Anomalie</a></li>
						<li><a href="{{ path('myapp_accueil_admin') }}">Administration</a></li>
					</ul>				
				</div>
				<div id="content" class="span9">
					{% block body %}					
					{% endblock %}
				</div>
			</div>

			<hr>

			<footer>
				<p>Aucun copyright production &copy; 2012.</p>
			</footer>
		</div>

	{% block javascripts %}
		{# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}

	</body>
</html>




